package modmaker.gui;



public class OpenModInfo {
	public static boolean done;
	public static DialogModInfoGui dialog;
	public static void open(String title, boolean replace){
		done = false;
		dialog = new DialogModInfoGui(title,replace);
		SetDialogShown show = new SetDialogShown(dialog);
		Thread thread = new Thread(show);
		while(!done){
			
		}
		dialog.dispose();
	}
}
