package modmaker.gui.nodes;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Point;

public class Link {
	private NodePort port;
	private int x = 0,y = 0;
	public int renderX,renderY;
	public Link(NodePort port){
		this.port = port;
		x = port.x;
		y = port.y;
	}
	public NodePort getPort(){
		return this.port;
	}
	public void setPoint(Point point){
		this.setPoint(point.x, point.y);
	}
	public void setPoint(int x, int y){
		this.x = x;
		this.y = y;
	}
	public Point getPoint(){
		return new Point(x,y);
	}
	public void Draw(Graphics g){
		g.setColor(Color.black);
		g = g.create();
		g.translate(renderX, renderY);
		g.drawLine(0, 0, (x/2), 0);
		g.drawLine((x/2), 0, (x/2), y);
		g.drawLine((x/2), y, x, y);
	}
}
