package modmaker.gui;

import java.util.ArrayList;
import java.util.HashMap;

import javax.swing.JComponent;
import javax.swing.JFrame;

public class Renderer extends JFrame{
	/**
	 * 
	 */
	private static final long serialVersionUID = 2741649952381274367L;
	private HashMap<String, ArrayList<JComponent>> screens = new HashMap<String, ArrayList<JComponent>>();
	private ArrayList<JComponent> activeElements = new ArrayList<JComponent>();
	public void addScreen(String screen, ArrayList<JComponent> elements){
		this.screens.put(screen, elements);
	}
	public void switchScreen(String screenName){
		for(JComponent comp : activeElements){
			comp.setVisible(false);
		}
		this.activeElements.clear();
		for(JComponent comp : this.screens.get(screenName)){
			this.activeElements.add(comp);
			comp.setVisible(true);
		}
	}
}
